.site-title{font-size:1.5em}body{background:unset}a{color:#2d2832}a:hover{color:#000}form{position:relative;bottom:4em}form>label{margin:.5em auto;text-transform:uppercase}form>button{position:absolute;left:0;right:0;margin-left:auto;margin-right:auto;background-color:#2d2832}.sam{font-size:.75em;font-weight:500}.header-inner .toggle-wrapper::before{background:#dedfdf;display:block;height:2.7rem;position:absolute;left:0;top:0;width:0}.home-works{display:flex;flex-direction:row}.home-works-image-container{max-width:80vh;margin:0 auto;position:relative}.home-works-image-container>span{position:absolute;top:0;width:100%;height:100%;text-align:center;font-size:2em;font-weight:600;padding-top:calc(50% - 1em);opacity:0;transition:all 300ms ease}.home-works-image-container>span:hover,.home-works-image-container>span:active{opacity:1;background-color:rgba(33,30,33,0.333);color:#fff}@media (max-width: 1000px){.home-works{flex-direction:column}.home-works-image-container{max-width:calc(100% - 2em);margin:2em auto}}button,.button,.faux-button,.wp-block-button__link,.wp-block-file .wp-block-file__button,input[type=button],input[type=reset],input[type=submit]{background:#2d2832}
